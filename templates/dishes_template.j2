<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MenuDB - Known Dishes</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="static/style.css">
    <style>
        .dishes-table-image-column {
            padding-left: 0 !important;
        }

        .dishes-table-image-column img {
            width: 128px;
            height: 128px;
            object-fit: cover;
        }

        .dishes-table-menuaction-column {
            padding-right: 0 !important;
            text-align: right;
        }

        .btn-googleimage {
            width: 128px;
            height: 128px;
        }

        .dish-name-div {
            padding-bottom: 0.4rem;
        }

        .dish-name-primary {
            font-weight: bold;
        }

        .dish-description-div {
            font-size: x-small;
            padding-bottom: 0.4rem;
            color: #6c757d;
        }

        .dish-foundin-menus-div {
            font-size: x-small;
            color: #6c757d;
        }

        .btn-menuaction {
            width: 100%;
            padding-left: 0.1rem;
            padding-right: 0.1rem;
            white-space: nowrap;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <header>
        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="index.html">MenuDB</a>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <!-- Page Title -->
        <h1 class="my-4">Known Dishes</h1>

        <!-- Table of Contents -->
        <ul>
            {% for locale_dish_group in locale_dish_groups %}
            <li><a href="#cuisine-{{ locale_dish_group.locale_code }}">{{ locale_dish_group.cuisine_name_en }} ({{
                    locale_dish_group.menu_items | length }})</a></li>
            {% endfor %}
        </ul>

        <!-- Filter Input -->
        <div class="mt-5 mb-2">
            <input class="form-control" id="filterInput" type="text" placeholder="Filter by name or description">
        </div>

        <!-- Dish Table -->
        <table id="dataTable" class="table">
            {% for locale_dish_group in locale_dish_groups %}
            <thead>
                <tr>
                    <th colspan="3">
                        <a name="cuisine-{{ locale_dish_group.locale_code }}" />
                        {{ locale_dish_group.cuisine_name_en }}
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for item in locale_dish_group.menu_items %}
                <!-- Dish -->
                <tr>
                    {% set primary_name_native = item['name_native'].split(',')[0] %}

                    <td class="dishes-table-image-column">
                        {% if item['image_url'] %}
                        <img src="{{ item['image_url'] }}" alt="Dish Image"
                            onclick="openGoogleImageSearch('{{ primary_name_native }}')">
                        {% else %}
                        <button aria-label="Image Search" type="button" class="btn btn-light btn-googleimage"
                            onclick="openGoogleImageSearch('{{ primary_name_native }}')">üñºÔ∏è üîé</button>
                        {% endif %}
                    </td>
                    <td>
                        <div class="dish-name-div">
                            <span class="dish-name-primary">{{ primary_name_native }}</span><br>
                            <span class="dish-name-secondary">{{ item.name_en }}</span>
                        </div>
                        <div class="dish-description-div">
                            <span class="dish-description">{{ item.description_en }}</span>
                        </div>
                        <div class="dish-foundin-menus-div">
                            <span class="dish-foundin-menus">
                                {% for menu_filename in item['_menu_filenames'] %}
                                <a href="{{ menu_filename }}">{{
                                    menu_filename_to_menu_yaml_dicts[menu_filename].restaurant.name
                                    }}</a>{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </span>
                        </div>
                    </td>
                    <td class="dishes-table-menuaction-column">
                        {% if locale_dish_group.locale_code == 'zh-u-sd-cngd' %}
                        <button aria-label="Speak" class="btn btn-light btn-menuaction btn-speak"
                            onclick="speakText('{{ primary_name_native }}', 'zh-HK')">üó£Ô∏èÁ≤µ</button><br>
                        <button aria-label="Speak" class="btn btn-light btn-menuaction btn-speak"
                            onclick="speakText('{{ primary_name_native }}', 'zh-CN')">üó£Ô∏è</button><br>
                        {% else %}
                        <button aria-label="Speak" class="btn btn-light btn-menuaction btn-speak"
                            onclick="speakText('{{ primary_name_native }}', '{{ item['locale_code'] }}')">üó£Ô∏è</button><br>
                        {% endif %}

                        {% set wikipedia_url = item['wikipedia_url_en'] %}
                        {% if wikipedia_url %}
                        <button aria-label="Open Wikipedia" class="btn btn-light btn-menuaction btn-wikipedia"
                            onclick="openLink('{{ wikipedia_url }}', 'wikipedia')">W</button><br>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
            {% endfor %}
        </table>
    </div>

    <!-- Footer -->
    {# <footer class="footer">
        <div class="container">
            <p><small>Generated by MenuDB</small></p>
        </div>
    </footer> #}

    {% include 'templates/common_script.j2' %}
    <script>
        // Get references to the input element and the table
        const filterInput = document.getElementById("filterInput");
        const dataTableBody = document.getElementById("dataTable");

        // Add an input event listener to the search input
        filterInput.addEventListener("input", function () {
            const searchText = filterInput.value.toLowerCase();
            const rows = dataTableBody.getElementsByTagName("tr");

            // Loop through all table rows and hide those that don't match the search query
            for (let i = 0; i < rows.length; i++) {
                const row = rows[i];

                // Use the text contents of the first DIV inside the second TD
                if (row.cells.length > 1) {
                    const divs = row.cells[1].getElementsByTagName("div");
                    const cellText = ([divs[0].innerText, divs[1].innerText].join('\n')).toLowerCase();
                    if (cellText.includes(searchText)) {
                        row.style.display = "";
                    } else {
                        row.style.display = "none";
                    }
                }
            }
        });
    </script>
</body>

</html>